<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Just+Me+Again+Down+Here|Open+Sans" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand logo" href="#">lecoinbof.fr</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('homepage') }}"><i class="fas fa-home"></i> Accueil <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('advertisement_new') }}"><i class="far fa-paper-plane"></i> Poster une annonce</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('advertisement_index') }}"><i class="fas fa-bullhorn"></i> Les offres</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                        <li class="nav-item">
                            <a href="{{ path('advertisement_authorList', { 'username': app.user.username }) }}" class="nav-link"><i class="far fa-newspaper"></i> Mes annonces</a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('advertisement_user_requests', { 'username': app.user.username }) }}" class="nav-link"><i class="fas fa-pen-fancy"></i> Mes demandes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fas fa-user-circle"></i> {{ app.user.username }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_logout') }}"><i class="fas fa-sign-out-alt"></i> Se DÃ©connecter</a>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_login')}}"><i class="far fa-user"></i> Se connecter</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </header>
        {% block banner %}{% endblock %}
        <div class="container">
        {% block body %}{% endblock %}
        </div>
        {% include 'footer.html.twig' %}
        <script src="{{ asset('build/js/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
